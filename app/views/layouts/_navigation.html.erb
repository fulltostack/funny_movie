<div class="nav">
  <div class="brand"><%= link_to t('title'), root_path %></div>
  <% if current_user %>
    <div class="welcome-box">
      <div><%= t('user.welcome') %> <%= current_user.email %></div>
      <div><%= link_to t('user.log_out'), logout_path %></div>
    </div>
  <% else %>
    <div class="login-form">
      <%= form_tag sessions_path do |form| %>
        <%= text_field_tag :email, '', placeholder: t('user.email') %>
        <%= password_field_tag :password, '', placeholder: t('user.password') %>
        <%= submit_tag t('user.log_in'), class: 'btn-submit' %>
      <% end %>
      <p id='notice'><%= alert || notice %></p>
    </div>
  <% end %>
</div>
