<div class='form-center'>
  <%= form_for(@yt_video) do |f| %>
    <fieldset>
      <legend><%= t('youtube_video.share_video_label') %></legend>
      <p id='notice'><%= notice %></p>
      <div class="form-inputs">
        <div class="span 3">
          <%= f.label t('youtube_video.url_label') %>
          <%= f.text_field :url %>
        </div>
      </div>
      <br>
      <div class="form-actions">
        <%= f.button t('youtube_video.share'), type: :submit %>
      </div>
    </fieldset>
  <% end %>
</div>